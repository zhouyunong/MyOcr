<?xml version ="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    tools:context=".TranslateActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="10"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@color/black"
                android:gravity="center"
                android:text="文字识别（暂限英文）"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/logo_bg2"
                android:scaleType="matrix" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="2dip"
            android:layout_weight="5"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:stretchColumns="0,1" >

            <TableRow android:layout_weight="5" >

                <Button
                    android:id="@+id/btn_word_from_camera"
                    style="@style/btn_style_main"
                    android:layout_width="50dip"
                    android:layout_height="match_parent"
                    android:layout_margin="2dip"
                    android:text="摄像头取词" />

                <Button
                    android:id="@+id/btn_translate_straightly"
                    style="@style/btn_style_main"
                    android:layout_width="50dip"
                    android:layout_height="match_parent"
                    android:layout_margin="2dip"
                    android:text="单词翻译" />
            </TableRow>

            <TableRow android:layout_weight="5" >

                <Button
                    android:id="@+id/btn_text_from_image"
                    style="@style/btn_style_main"
                    android:layout_width="50dip"
                    android:layout_height="match_parent"
                    android:layout_margin="2dip"
                    android:text="本地图片识别" />

                <Button
                    android:id="@+id/btn_camera_recog"
                    style="@style/btn_style_main"
                    android:layout_width="50dip"
                    android:layout_height="match_parent"
                    android:layout_margin="2dip"
                    android:text="相机拍照识别" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/welcome"
        android:visibility="visible" />

</RelativeLayout>